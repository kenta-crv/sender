            label 配送(はいそう)[Delivery] 個数(こすう)[Quantity]
            small 慣れている人の目安
            input#quantity.form-control type="number" value="150"
          .form-group
            label 日数(にっすう)[Days]
            input#days.form-control type="number" value="25"
      
          h3 経費(けいひ)[Expenses]
          .form-group
            label 車レンタル代(しゃレンタルだい)[Car Rental]（円[JPY]）
            small おおよそ35,000~40,000円でエリアや空き状況による
            input#rental.form-control type="number" value="35000"
          .form-group
            label ガソリン代(ガソリンだい)[Gasoline]（円[JPY]）
            small 稼働時間や運転の仕方による
            input#gas.form-control type="number" value="25000"
          .form-group
            label 保険代(ほけんだい)[Insurance]（円[JPY]）
            small 年齢や事故歴による
            input#insurance.form-control type="number" value="20000"
      
          .result-box
            p
              strong 報酬[Total Reward]：
              span#total_reward.highlight 0
              | 円[JPY]
            p
              strong 経費[Total Expense]：
              span#total_expense.highlight 0
              | 円[JPY]
            p
              strong 収益(しゅうえき)[Profit]：
              span#net_income.highlight 0
              | 円[JPY]
      
          script
           |
            (function(){
             function mountCalculator(){
               var unitPriceInput = document.getElementById('unit_price');
               var quantityInput = document.getElementById('quantity');
               var daysInput = document.getElementById('days');

               var rentalInput = document.getElementById('rental');
               var gasInput = document.getElementById('gas');
               var insuranceInput = document.getElementById('insurance');

               var totalRewardEl = document.getElementById('total_reward');
               var totalExpenseEl = document.getElementById('total_expense');
               var netIncomeEl = document.getElementById('net_income');

               if (!unitPriceInput || !quantityInput || !daysInput || !rentalInput || !gasInput || !insuranceInput || !netIncomeEl) {
                 // 必要な要素が足りない場合は何もしない（デバッグ用に console に出す）
                 console.warn('calculator: required elements missing');
                 return;
               }

               function toNum(v){
                 var n = parseFloat(String(v).replace(/,/g, ''));
                 return isNaN(n) ? 0 : n;
               }

               function format(n){
                 return n.toLocaleString();
               }

               function calculate(){
                 var unitPrice = toNum(unitPriceInput.value);
                 var quantity = toNum(quantityInput.value);
                 var days = toNum(daysInput.value);

                 var rental = toNum(rentalInput.value);
                 var gas = toNum(gasInput.value);
                 var insurance = toNum(insuranceInput.value);

                 var totalReward = unitPrice * quantity * days;
                 var totalExpense = rental + gas + insurance;
                 var netIncome = totalReward - totalExpense;

                 if (totalRewardEl) totalRewardEl.textContent = format(totalReward);
                 if (totalExpenseEl) totalExpenseEl.textContent = format(totalExpense);
                 netIncomeEl.textContent = format(netIncome);
               }

               [unitPriceInput, quantityInput, daysInput, rentalInput, gasInput, insuranceInput].forEach(function(el){
                 el.addEventListener('input', calculate);
               });

               // 初期計算（値が HTML の value 属性から取られる）
               calculate();
             }

             // Turbo / Turbolinks / plain load 対応
             document.addEventListener('DOMContentLoaded', mountCalculator);
             document.addEventListener('turbo:load', mountCalculator);
             document.addEventListener('turbolinks:load', mountCalculator);
            })();


